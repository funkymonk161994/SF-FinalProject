<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sf.vimo.com.sf.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="100dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/userTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="@string/Name" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userTag"
            android:layout_toEndOf="@+id/passTag"
            android:textSize="16sp"
            android:text="Alex" />

        <TextView
            android:id="@+id/passTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userTag"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="@string/url" />

        <TextView
            android:id="@+id/passWord"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passTag"
            android:layout_alignBottom="@+id/passTag"
            android:textSize="16sp"
            android:layout_alignStart="@+id/logo"
            android:text="www.linkedIN.com/alexPichai" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:text="ADD" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
